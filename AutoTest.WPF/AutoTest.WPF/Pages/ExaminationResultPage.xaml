<Page x:Class="AutoTest.WPF.Pages.ExaminationResultPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoTest.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
      Title="ExaminationResultPage">

    <Grid>
        <Label Content="Result" Height="60" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"/>
        
        <StackPanel Margin="60">
            <Label Content="Number of Answers" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock Name="QuestionsCountTextBlock" Text="0" FontSize="20"/>
            
            <Label Content="Number of Correct Answers" FontSize="20" FontWeight="SemiBold"/>
            <TextBlock Name="CorrectAnswersCountTextBlock" Text="0" FontSize="20"/>

        </StackPanel>
        <Button Name="MenuButton" Click="MenuButtonClick" Content="Menu" Width="100" Height="60" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" FontWeight="SemiBold"></Button>
    </Grid>
</Page>
