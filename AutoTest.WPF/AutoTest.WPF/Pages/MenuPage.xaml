<Page x:Class="AutoTest.WPF.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoTest.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
      Title="MenuPage">

    <Grid>
        <StackPanel>
            <Label Content="Menu" Height="60" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"></Label>
            <StackPanel>
                <Button Click="TicketsButton_OnClick" Content="Tickets" FontSize="18" Width="200" Height="60" FontWeight="SemiBold" Margin="0, 0, 0, 10"></Button>
                <Button Click="ExaminationButton_OnClick" Content="Examination" FontSize="16" Width="200" Height="60" FontWeight="SemiBold"></Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Page>
