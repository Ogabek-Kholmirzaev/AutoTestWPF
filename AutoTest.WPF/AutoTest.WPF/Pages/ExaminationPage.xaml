<Page x:Class="AutoTest.WPF.Pages.ExaminationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoTest.WPF.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="600"
      Title="ExaminationPage">

    <Grid>
        <Label Name="TitleLabel" Content="Examination" Height="60" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Top" FontWeight="Bold"></Label>
        <StackPanel Margin="0,60,0,60">
            <Image Source="/Pages/car.png" Height="250"></Image>
            <Label Name="QuestionTextLabel" Height="80" HorizontalAlignment="Center" FontSize="18" FontWeight="SemiBold" Content="Savol" VerticalContentAlignment="Center"></Label>
            <ScrollViewer Height="250">
                <StackPanel Name="ChoicesPanel"></StackPanel>
            </ScrollViewer>
        </StackPanel>
        <Button Click="MenuButtonClick" Content="Menu" Width="100" Height="60" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" FontWeight="SemiBold"></Button>
    </Grid>
</Page>
